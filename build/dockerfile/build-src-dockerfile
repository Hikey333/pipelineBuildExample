FROM quay.io/marrober/maven-build@sha256:9b83db48a99ee5c03261a913dacac2a55a6b71a0ad52c9d2b135fbc572bc36bb

USER 1001 

WORKDIR /home/maven

RUN mkdir /home/maven/target
RUN mkdir /home/maven/src

RUN ls -al /home/maven

COPY build/dockerfile/server.xml /home/maven/target
COPY pom.xml .
COPY /src /home/maven/src

RUN ls 

RUN mvn package

